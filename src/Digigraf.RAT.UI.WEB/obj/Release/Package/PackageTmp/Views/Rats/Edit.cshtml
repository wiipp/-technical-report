                                        @Html.LabelFor(model => model.email_cli_rat)

                                        @Html.EditorFor(model => model.email_cli_rat, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.email_cli_rat, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                                <div class="row">

                                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                                        @Html.LabelFor(model => model.km_cli_rat)

                                        @Html.EditorFor(model => model.km_cli_rat, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.km_cli_rat, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
