                                        </div>
                                    </div>

                                </div>


                                <div class="row">

                                    <div class="col-md-4 col-sm-3 col-xs-12 form-group">
                                        @Html.LabelFor(model => model.a1_cod)

                                        @Html.EditorFor(model => model.a1_cod, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.a1_cod, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                                        @Html.LabelFor(model => model.empresa)

                                        @Html.EditorFor(model => model.empresa, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.empresa, "", new { @class = "text-danger" })

