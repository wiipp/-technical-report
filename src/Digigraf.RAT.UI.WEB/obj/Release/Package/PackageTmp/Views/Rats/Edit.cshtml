@using Digigraf.RAT.UI.WEB.App_Helpers
@model Digigraf.Rat.Aplicacao.ViewModel.RatVm

@{
    ViewBag.Title = "Editar -";
}

<h2>Alteração de RAT</h2>


@using (Html.BeginForm())
