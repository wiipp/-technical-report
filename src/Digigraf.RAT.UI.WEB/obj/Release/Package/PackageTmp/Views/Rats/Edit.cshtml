                                            @Html.LabelFor(model => model.Hr_Rat)

                                            @Html.EditorFor(model => model.Hr_Rat, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Hr_Rat, "", new { @class = "text-danger" })
                                        </div>*@

                                </div>

                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                                        @Html.LabelFor(model => model.b1_cod)

                                        @Html.EditorFor(model => model.b1_cod, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.b1_cod, "", new { @class = "text-danger" })

