                                        @Html.EditorFor(model => model.inst_sw, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.inst_sw, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                                <div class="row">


                                    <div class="col-md-4 col-sm-5 col-xs-4 form-group">
                                        @Html.LabelFor(model => model.hr_abre_cham_hp)
                                        @Html.EditorFor(model => model.hr_abre_cham_hp, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.hr_abre_cham_hp, "", new { @class = "text-danger" })
                                    </div>


                                    <div class="col-md-4 col-sm-5 col-xs-4 form-group">
                                        @Html.LabelFor(model => model.hr_fecha_cham_hp)
                                        @Html.EditorFor(model => model.hr_fecha_cham_hp, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.hr_fecha_cham_hp, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                <div class="form-group">
                                    <div class="col-sm-4">
                                        <input type="submit" value="Salvar" class="btn btn-success" />
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-4">
                                            <a href="@Url.Action("ListarRat","Rats")">
                                                <button type="button" class="btn btn-danger">
                                                    Voltar
                                                </button>
                                            </a>

                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </fieldset>
}



@section scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/plugin/placeholders.jquery.min.js"></script>
    <script src="~/Scripts/plugin/select2.full.min.js"></script>
    <script src="~/Scripts/plugin/pt-BR.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $(".js-select")
            .select2({
                allowClear: true,
                width: '100%'
            });
        });

    </script>


