                                            @Html.DropDownListFor(model => model.cod_tec, Model.DropListTecnico, "Selecione", new { @id = "tecnico", @class = "js-select" }) <i></i>
                                            @Html.ValidationMessageFor(model => model.cod_tec, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-sm-4 col-xs-12 form-group">
                                        @Html.LabelFor(model => model.cod_ate)
