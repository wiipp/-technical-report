                                        @Html.LabelFor(model => model.dt_vis_rat)
                                        @Html.EditorFor(model => model.dt_vis_rat, new { htmlAttributes = new { data_mask = "99/99/9999", data_mask_placeholder = "-", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.dt_vis_rat, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-4 col-sm-3 col-xs-4 form-group">
                                        @Html.LabelFor(model => model.hr_vis_rat)
